# Environment Configuration Template
# Copy this file to .env.local and update the values for your local development

# Database Configuration
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5433

# Spring Profiles
SPRING_PROFILES_ACTIVE=local

# Database URLs
CMS_DATASOURCE_URL=jdbc:postgresql://postgres:5432/postgres?currentSchema=cms_cmsMicroService
FRAUD_DATASOURCE_URL=jdbc:postgresql://postgres:5432/postgres?currentSchema=cms_fraudMicroService

# Database Credentials
DATASOURCE_USERNAME=postgres
DATASOURCE_PASSWORD=your_secure_password_here

# Service Ports
CMS_SERVICE_PORT=8080
FRAUD_SERVICE_PORT=8090

# Container Names
POSTGRES_CONTAINER_NAME=cms-postgres
CMS_CONTAINER_NAME=cms-microservice
FRAUD_CONTAINER_NAME=fraud-microservice

# Application Configuration
SERVER_SERVLET_CONTEXT_PATH=/cms/v1
FRAUD_SERVER_SERVLET_CONTEXT_PATH=/fraud/v1
FRAUD_URL=http://fraud-microservice:8090/fraud/v1

# Crypto Configuration (IMPORTANT: Change these values!)
CMS_AREBA_CRYPTO_PASSWORD=changeThis
CMS_AREBA_CRYPTO_SALT_HEX=3f1c7a5d2b9e44f0aa11bb22cc33dd44

# Business Logic Configuration
FRAUD_LIMIT=10000
FRAUD_INTERVAL=PT1H

# Additional Environment Variables (add as needed)
# JWT_SECRET=your_jwt_secret_here
# ENCRYPTION_KEY=your_encryption_key_here
# API_KEY=your_api_key_here
