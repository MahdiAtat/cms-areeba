# Environment Configuration Template
# Copy this file to env.local and update the values for your local development

# Database Configuration
POSTGRES_DB=postgres
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_PORT=5433

# Database URLs
CMS_DATASOURCE_URL=jdbc:postgresql://postgres:5432/postgres?currentSchema=cms_cmsMicroService
FRAUD_DATASOURCE_URL=jdbc:postgresql://postgres:5432/postgres?currentSchema=cms_fraudMicroService

# Database Credentials
DATASOURCE_USERNAME=postgres
DATASOURCE_PASSWORD=your_secure_password_here

# Service Ports
CMS_SERVICE_PORT=8080
FRAUD_SERVICE_PORT=8090

# Container Names
POSTGRES_CONTAINER_NAME=cms-postgres
CMS_CONTAINER_NAME=cms-microservice
FRAUD_CONTAINER_NAME=fraud-microservice

# Application Configuration
FRAUD_URL=http://fraud-microservice:8080/fraud/v1
CMS_SERVER_SERVLET_CONTEXT_PATH=/cms/v1
FRAUD_SERVER_SERVLET_CONTEXT_PATH=/fraud/v1

# Flyway Database Migration Configuration
CMS_FLYWAY_SCHEMAS=cms_cmsMicroService
CMS_FLYWAY_DEFAULT_SCHEMA=cms_cmsMicroService
FRAUD_FLYWAY_SCHEMAS=cms_fraudMicroService
FRAUD_FLYWAY_DEFAULT_SCHEMA=cms_fraudMicroService

# Crypto Configuration (IMPORTANT: Change these values in production!)
CMS_AREEBA_CRYPTO_PASSWORD=changeThis
CMS_AREEBA_CRYPTO_SALT_HEX=3f1c7a5d2b9e44f0aa11bb22cc33dd44

# Business Logic Configuration
FRAUD_LIMIT=10000
FRAUD_INTERVAL=PT1H